; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo ""

click-left = "spotifyctl -q previous"


[module/next]
format-font = 5
type = custom/ipc
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo ""
click-left = "spotifyctl -q next"


[module/playpause]
format-font = 5
type = custom/ipc
; Default
hook-0 = echo ""
; Playing
hook-1 = echo ""
; Paused
hook-2 = echo ""

click-left = "spotifyctl -q playpause"


;[module/spotify]
;format-font = 1
;type = custom/ipc
; Default
;hook-0 = echo ""
; Playing/paused show song name and artist
;hook-1 = spotifyctl -q status --format '%artist%: %title%'

;icon-prev = 
;icon-stop = ""
;icon-play = 
;icon-pause = 
;icon-next = 

[module/spotify]
type = custom/script
interval = 1
format-font = 5 
format-prefix = " "
format = <label>
exec = python $HOME/.config/polybar/scripts/spotify_status.py -f '{artist}: {song}'
;control players (optional)
click-left = playerctl --player=spotify play-pause 
click-right = playerctl --player=spotify next 
click-middle = playerctl --player=spotify previous 
